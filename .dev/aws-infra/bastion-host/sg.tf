resource "aws_security_group_rule" "allow_ssh" {
  count = local.ssh_resources

  type              = "ingress"
  from_port         = 22
  to_port           = 22
  protocol          = "tcp"
  cidr_blocks       = ["0.0.0.0/0"]
  ipv6_cidr_blocks  = ["::/0"]
  security_group_id = local.security_group
}